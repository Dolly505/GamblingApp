<html>
    <head>
        <title>Login</title>
    </head>
    <body>

    <%= session[:message]%>
        <div style="height: 50px; background-color: darkgray; text-align: center;padding-top: 3px;margin-bottom: 8px;">
            <h4>Gambling Site</h4>
        </div>
        <div>
            <form method="post" action="/login">
                <table>
                    <tr>
                        <td>Username: </td>
                        <td><input type="text" name="id"/></td>                        
                    </tr>
                    <tr>
                        <td>Password: </td>
                        <td><input type="text" name="password"/></td>                        
                    </tr>
                    <tr align="center">
                        <td colspan="2">                
                            <input type="submit" name="submit"/>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </body>
</html>